<nav class="site-nav">
    <div class="site-nav-top">
        {{#if @site.logo}}
            <!--
                 Hardcode site logo. The site logo in Ghost needs really strict sizing requirements in order for it to put it in the structured data properly
                 but that makes the logo look really blurry on the actual site. So use Ghost uploaded logo for Google Structured data requirements and use
                 a crisp logo here.
            -->
            <a class="site-nav-logo" href="https://shop.mayvenn.com"><img src="https://d6w7wdcyyr51t.cloudfront.net/cdn/images/mayvenn_logo.ee8d0306.svg" alt="{{@site.title}}" /></a>
        {{else}}
            <a class="site-nav-logo" href="https://shop.mayvenn.com">{{@site.title}}</a>
        {{/if}}
    </div>
    <div class="site-nav-bottom">
        {{#if @site.navigation}}
            {{navigation}}
        {{/if}}
        <div class="social-links hidden">
            {{#if @site.facebook}}
                <a class="social-link social-link-fb" href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "icons/facebook"}}</a>
            {{/if}}
            {{#if @site.twitter}}
                <a class="social-link social-link-tw" href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "icons/twitter"}}</a>
            {{/if}}
        </div>
        {{#if @labs.subscribers}}
            <a class="subscribe-button hidden" href="#subscribe">Subscribe</a>
        {{else}}
            <a class="rss-button hidden" href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener">{{> "icons/rss"}}</a>
        {{/if}}
    </div>
</nav>
